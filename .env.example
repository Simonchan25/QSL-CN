# ============================================
# QSL-CN Environment Configuration
# ============================================
# IMPORTANT: Never commit the actual .env file to git!
# Copy this file to .env and fill in your values
# ============================================

# Tushare API Configuration
# Get your token from https://tushare.pro/
# SECURITY: Keep this token secret!
TUSHARE_TOKEN=your_tushare_token_here

# Ollama LLM Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:8b
# Alternative faster models: qwen2.5:7b, gemma3:latest
OLLAMA_NUM_PREDICT=8192
OLLAMA_TIMEOUT=300

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8001

# Frontend Domain (for CORS)
# Production: https://gp.simon-dd.life
# Development: http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Cache Configuration
CACHE_TTL_TECHNICAL=300
CACHE_TTL_FUNDAMENTAL=600
CACHE_TTL_MARKET=300
CACHE_MAX_SIZE=1000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=server.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
